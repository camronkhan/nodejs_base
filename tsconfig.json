{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*":[
                "node_modules/*",
                "src/types/*"
            ]
        },
        "sourceRoot": "src",
        "outDir": "dist"
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tmp"
    ]
}